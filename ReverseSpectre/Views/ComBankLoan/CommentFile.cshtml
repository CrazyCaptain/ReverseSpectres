@{
    ViewBag.Title = "Comment";
    int id = (int)ViewBag.Id;
    int loanId = (int)ViewBag.LoanId;
}

<h2>Comment</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", id)

    <div class="form-horizontal">
        <h4>Loan ApplicationDocument File</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("comment", "Comment", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("comment", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Loan", "Details", new { id = loanId })
</div>
