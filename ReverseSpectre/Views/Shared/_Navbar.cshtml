<div class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("UNIONBANK", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (Request.IsAuthenticated)
                {
                    if (User.IsInRole("Client"))
                    {
                        <li>@Html.ActionLink("Profile", "Index", "ClientProfile")</li>
                        <li>@Html.ActionLink("Loans", "Index", "ClientLoan")</li>
                    }
                    else if (User.IsInRole("RelationshipManager"))
                    {
                        <li>@Html.ActionLink("Loans", "Index", "RelationshipManagerClient")</li>
                    }
                }
            </ul>
            
            @Html.Partial("_LoginPartial")

        </div>
    </div>
</div>