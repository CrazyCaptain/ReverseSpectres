@model ReverseSpectre.Models.LoanApplicationViewModel

@{
    ViewBag.Title = "Application";
    Layout = "~/Views/Shared/_Layout_Unpadded.cshtml";
}

<div class="section-container">

    <div class="section-header">
        <h3>Edit Profile</h3>
        <div>
            @Html.ActionLink("Go Back", "Index")
        </div>
    </div>

    <div class="section-content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <h4 style="margin-bottom:20px;">Loan Details</h4>

                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Term, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Term, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Term, "", new { @class = "text-danger" })
                    </div>
                </div>

                <hr />

                <h4 style="margin-bottom:20px;">Spouse / Partner</h4>

                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.FirstName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.FirstName, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.FirstName, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.MiddleName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.MiddleName, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.MiddleName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.LastName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.LastName, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.LastName, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.IsFemale, htmlAttributes: new { @class = "control-label" })
                        <div class="row">
                            <div class="col-md-6">
                                @Html.RadioButton("Partner.IsFemale", false, true, new { @id = "IsFemale" })
                                <label for="IsFemale">Female</label>
                            </div>
                            <div class="col-md-6">
                                @Html.RadioButton("Partner.IsFemale", false, false, new { @id = "IsMale" })
                                <label for="IsMale">Male</label>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Partner.IsFemale, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.Birthdate, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.Birthdate, new { htmlAttributes = new { @class = "form-input", type = "date" } })
                        @Html.ValidationMessageFor(model => model.Partner.Birthdate, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.Email, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.Email, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.Relationship, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.Relationship, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.Relationship, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.Nationality, htmlAttributes: new { @class = "control-label" })
                        <select class="form-input" name="Nationality" id="Nationality">
                            <option value="Philippines">Philippines</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Partner.Nationality, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.MobileNumber, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.MobileNumber, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.MobileNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.Employer, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.Employer, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.Employer, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.EmployerAddress, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.EmployerAddress, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.EmployerAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.Position, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.Position, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.Position, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Partner.YearsInJob, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Partner.YearsInJob, new { htmlAttributes = new { @class = "form-input" } })
                        @Html.ValidationMessageFor(model => model.Partner.YearsInJob, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <center>
                        <input type="submit" value="Save" class="btn btn-default" />
                    </center>
                </div>
            </div>
        }
    </div>
    <!-- Section Content End-->
</div>
<!-- Section Container End-->

@section Styles {
    <style>
        label {
            padding-left: 4px;
            margin-bottom: 8px !important;
        }

        .form-input {
            width: 100%;
        }

        .form-group {
            margin-bottom: 35px !important;
        }

            .form-group:last-child {
                margin-top: 40px;
            }
    </style>
}